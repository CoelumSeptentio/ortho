{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["node"],
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noEmitOnError": false,
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": [
    "./",
    "src/**/*.ts",
    "config/**/*.ts",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".cache",
    ".tmp",
    "src/admin",
    "**/*.test.*",
    "src/plugins/**"
  ]
}
